<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

<EditText
    android:id="@+id/activity_form_curso_campo_nome"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Nome da Tarefa " />

    <EditText
        android:id="@+id/activity_form_curso_campo_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Entre com a data ðŸ“…" />
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_form_curso_campo_descricao"
        android:layout_marginLeft="10dp"
        android:text="Certificar Data ðŸ”’" />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="18dp"/>

<Button
    android:id="@+id/activity_form_curso_botao_salvar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Salvar" />

</LinearLayout>