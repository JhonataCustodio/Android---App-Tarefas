<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/acitivity_list_cursos_list_item_imagem"
        android:layout_width="100dp"
        android:layout_height="match_parent">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/acitivity_list_cursos_list_item_campo_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"></TextView>

        <TextView
            android:id="@+id/acitivity_list_cursos_list_item_campo_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"></TextView>

        <Button
            android:id="@+id/botao_feito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feito"></Button>
    </LinearLayout>
</LinearLayout>